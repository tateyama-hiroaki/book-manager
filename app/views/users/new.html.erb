<% provide(:title, 'Signup') %>

<div class="signup-inner">
  <%= image_tag 'header-logo-64px.png', class: 'signup-logo', alt: 'book-logo' %>

  <p class="signup-first-message">Welcome to Book-Manager.</p>
  <p class="signup-first-message">Please enter your account.</p>

  <div class="signup-form">
    <header class="signup-form-title">Sign up</header>

    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages' %>
      
      <%= f.label :name, class: "signup-form-label" %>
      <%= f.text_field :name, class: "signup-form-input-box" %>

      <%= f.label :email, class: "signup-form-label" %>
      <%= f.email_field :email, class: "signup-form-input-box" %>

      <%= f.label :password, class: "signup-form-label" %>
      <%= f.password_field :password, class: "signup-form-input-box" %>

      <%= f.label :password_confirmation, class: "signup-form-label" %>
      <%= f.password_field :password_confirmation, class: "signup-form-input-box" %>

      <%= f.submit "Sign up", class: "signup-button" %>
    <% end %>
  </div>

  <p class="signup-second-message">Do you already have an account?</p>

  <button class="signup-signin-button">Sign in</button>
</div>