<% provide(:title, 'Book-Edit') %>
    
<%= render 'layouts/header' %>

<main>
  <div class="main-inner">
    <div class="book-edit-form">
      <header class="book-edit-form-title">Book Edit</header>
      
        <%= form_for(@book) do |f| %>
          <%= f.label :title, class: "book-edit-form-label" %>
          <%= f.text_field :title, class: "book-edit-form-input-box" %>

          <%= f.label :publisher, class: "book-edit-form-label" %>
          <%= f.text_field :publisher, class: "book-edit-form-input-box" %>

          <%= f.label :genre, class: "book-edit-form-label" %>
          <%= f.select :genre, [['専門書', '専門書'], ['実用書', '実用書'], ['コミック', 'コミック']],  include_blank: 'Please select.' %>

          <%= f.label :image, class: "book-edit-form-label" %>
          <%= f.file_field :image, class: 'file-select' %>

          <%= f.submit "Update", class: "book-edit-form-button" %>
      <% end %>
    </div>
  </div>  
</main>
